{
  "name": "@cbarkr/react-tunnel-vision",
  "version": "1.0.0",
  "description": "A mouse/touch-tracing tunnel vision effect for React components",
  "author": "Callum Barker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbarkr/react-tunnel-vision.git"
  },
  "bugs": {
    "url": "https://github.com/cbarkr/react-tunnel-vision/issues"
  },
  "homepage": "https://github.com/cbarkr/react-tunnel-vision#readme",
  "keywords": [
    "react",
    "lantern",
    "flashlight",
    "tunnel vision"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/react-tunnel-vision.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "format": "npx prettier --write src/",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/test.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/test.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "size-limit": "^11.1.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.3",
    "typescript": "^3.9.10"
  }
}
